{
	"manifest_version": 2,
	"name": "备忘录",
	"version": "1.0",
	"description": "一个有灵魂的备忘录，比你更懂你自己。by lvgo",
	"author": "lvgo",
	"homepage_url": "http://lvgo.org",
	"icons": {
		"128": "assets/icon.png"
	},
	"content_scripts": [
		{
			"matches": [
				"<all_urls>"
			],
			"js": [
				"js/content.js"
			],
			"css": [
				"assets/css/memo.css"
			],
			"run_at": "document_start"
		}
	],
	"background": {
		"scripts": [
			"js/background.js"
		]
	},
	"permissions": [
		"bookmarks",
		"history",
		"contextMenus",
		"tabs",
		"notifications",
		"webRequest",
		"webRequestBlocking",
		"storage",
		"http://*/*",
		"https://*/*"
	],
	"browser_action": {
		"default_icon": "assets/icon.png",
		"default_title": "一个有灵魂的备忘录，比你更懂你自己。"
	},
	"chrome_url_overrides": {
		"newtab": "newtab.html"
	},
	"content_security_policy": "script-src 'self' 'unsafe-eval' https://api.fanyi.baidu.com;  object-src 'self'"
}